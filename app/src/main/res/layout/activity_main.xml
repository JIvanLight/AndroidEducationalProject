<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="redactEditText, cancelEdit, editImage, line"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/cancelEdit"
        android:layout_width="41dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_highlight_off_24"
        app:layout_constraintBottom_toTopOf="@id/contentEditText"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7b7b7b"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contentEditText"
        />

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@id/cancelEdit"
        app:layout_constraintTop_toTopOf="@id/cancelEdit"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/redactEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@{Немного @string/redact_text}"
        android:textColor="#006DFC"
        android:importantForAutofill="no"
        android:inputType="none"
        android:padding="@dimen/common_spacing"
        android:textIsSelectable="false"
        android:textSize="@dimen/redact_edit_text_size"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@+id/toolsTop"
        app:layout_constraintBottom_toTopOf="@id/contentEditText"
        app:layout_constraintEnd_toStartOf="@+id/cancelEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editImage" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="redactEditText,cancelEdit" />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/post_text"
        android:background="@android:color/transparent"
        android:padding="@dimen/common_spacing"

        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:textIsSelectable="true"
        android:focusableInTouchMode="false"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@id/contentEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/contentEditText"
        app:layout_constraintTop_toTopOf="@id/contentEditText"
        app:srcCompat="@drawable/ic_baseline_navigation_24" />
</androidx.constraintlayout.widget.ConstraintLayout>