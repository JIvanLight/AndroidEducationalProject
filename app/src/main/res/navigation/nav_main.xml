<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.jivan.androideducationalproject.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_postContentActionsFragment"
            app:destination="@id/postContentActionsFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        android:id="@+id/postContentActionsFragment"
        android:name="ru.jivan.androideducationalproject.PostContentActionsFragment"
        android:label="fragment_edit_post"
        tools:layout="@layout/fragment_post_content_action"/>
    <fragment
        android:id="@+id/postFragment"
        android:name="ru.jivan.androideducationalproject.PostFragment"
        android:label="PostFragment"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_postFragment_to_postContentActionsFragment"
            app:destination="@id/postContentActionsFragment" />
    </fragment>
</navigation>